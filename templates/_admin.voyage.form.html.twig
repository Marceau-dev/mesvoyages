{{ form_start(formVisite) }}
    <div class="row">
        <div class="col">
            <div class="row">
                <div class="col-auto">
                    {{ form_row(formVisite.datecreation) }}
                </div>
                <div class="col">
                    {{ form_row(formVisite.note) }}
                </div>
                <div class="col">
                    {{ form_row(formVisite.tempmin) }}
                </div>
                <div class="col">
                    {{ form_row(formVisite.tempmax) }}
                </div>
            </div>
            <div class="row">
                <div class="col">
                    {{ form_row(formVisite.ville) }}
                </div>
                <div class="col">
                    {{ form_row(formVisite.pays) }}
                </div>
                {{ form_row(formVisite.environnements) }}
                {# Emplacement image #}
                <div>
                    {{ form_row(formVisite.imageFile) }}
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div>
                        Image actuelle : 
                        {% if visite.imageName %}
                            <img
                                src="{{ app.request.getBasePath() ~ vich_uploader_asset(visite, 'imageFile') }}"
                                class="card-img-top"
                                style="width: 100%; height: auto;"
                                alt="Image de la visite"
                            >
                        {% else %}
                            <p>(aucune image)</p>
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    {{ form_row(formVisite.avis) }}
                </div>
            </div>
        </div>
    </div>
{{ form_end(formVisite) }}
